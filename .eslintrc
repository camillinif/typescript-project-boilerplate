{
    "extends": [
        "plugin:prettier/recommended",
        "plugin:sonarjs/recommended",
        "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": ["prettier", "sonarjs", "@typescript-eslint", "jest"],

    "rules": {
        "prettier/prettier": "error",
        "@typescript-eslint/no-unused-vars": "error"
    },

    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        }
    }
}
